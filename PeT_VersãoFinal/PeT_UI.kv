WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "Main"

    espip:espip
    tvip:tvip

    GridLayout:
        cols:1
        size: root.width, root.height

        Label:
            text: "PeTdroid"
            font_size: 30
            size: 100, 50
            color: 0.478, 1, 0.964

        GridLayout:
            cols:2
            Label:
                text: "IP do ESP: "
                font_size: 30
                size: 50, 30
            TextInput:
                id: espip
                multinline: False
                font_size: 30
                size: 50, 30
            Label:
                text: "IP da TV: "
                font_size: 30
                size: 50, 30
            TextInput:
                id: tvip
                multinline: False
                font_size: 30
                size: 50, 30

        ToggleButton:
            text: 'GPS' if self.state == 'normal' else 'Stop'
            on_state:
                app.start(1000, 0) if self.state == 'down' else \
                app.stop()

        Button:
            text: "Enviar"
            on_press:
                root.set_ip()
            on_release:
                app.root.current = "Second"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "Second"

    channel:channel
    channel_angle:channel_angle

    GridLayout:
        cols:3

        Label:
            text: "Angulação:"
            font_size: 30
            size: 100, 50
        Label:
            id: channel_angle
            text: ""
            font_size: 30
            size: 100, 50
        Label:
            text: "°"
            font_size: 30
            size: 100, 50

        Button:
            text: "1"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(1)
        Button:
            text: "2"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(2)
        Button:
            text: "3"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(3)
        Button:
            text: "4"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(4)
        Button:
            text: "5"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(5)
        Button:
            text: "6"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(6)
        Button:
            text: "7"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(7)
        Button:
            text: "8"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(8)
        Button:
            text: "9"
            id: channel
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(9)
        Button:
            text: "Sair"
            font_size: 30
            size: 150, 100
            on_release:
                app.root.current = "Main"
                root.blank_menu()
                root.manager.transition.direction = "right"

        Button:
            text: "0"
            font_size: 30
            size: 150, 100
            on_press: root.get_channel(0)

        Button:
            text: "OK"
            font_size: 30
            size: 150, 100
            on_press: root.set_channel()
